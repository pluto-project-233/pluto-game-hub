{
    "name": "pluto-hub",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "tsx watch src/main.ts",
        "build": "tsc -b",
        "start": "node dist/src/main.js",
        "test": "vitest",
        "test:run": "vitest run",
        "test:automation": "node postman/automated-run.js",
        "lint": "eslint . --ext .ts",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma studio"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@fastify/jwt": "^8.0.1",
        "@prisma/client": "^5.22.0",
        "fastify": "^4.28.1",
        "firebase-admin": "^12.7.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^20.17.10",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.57.0",
        "newman": "^6.2.1",
        "prisma": "^5.22.0",
        "supertest": "^7.0.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "vitest": "^2.1.8"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}