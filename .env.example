# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/pluto"

# Firebase (Service Account JSON string)
# You can get this from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT='{"type": "service_account", ...}'

# Server
PORT=3000
NODE_ENV=development

# JWT Secret (for execution tokens)
JWT_SECRET="your-jwt-secret-here"

# HMAC Secret (for game backend signatures)
HMAC_SECRET="your-hmac-secret-here"
